{
  "version": "0.1",
  "allowCompoundWords": true,
  "enableFiletypes": ["dockerfile", "md", "yaml"],
  "enabledLanguageIds": ["json", "jsonc", "markdown", "yaml", "yml"],
  "ignorePaths": ["./**", "./.**/**", "!/**/**.md", "!/values-schema.yaml", "!/README.md"],
  "ignoreRegExpList": ["/'s\\b/"],
