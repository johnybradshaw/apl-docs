    "continously",
    "criticals",
    "gcloud",
    "hashicorp",
    "idps",
    "initalize",
    "istio",
    "kiali",
    "knative",
    "kube",
    "kubeconfig",
    "kubectl",
    "kubernetes",
    "Kustomize",
    "ldap",
    "oidc",
    "onprem",
    "openid",
    "otomi",
    "postgres",
    "redkubes",
    "socio",
    "unencrypted",
    "velero"
  ]
}
