{
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@docusaurus/core": "^2.0.0-alpha.66",
    "@docusaurus/preset-classic": "^2.0.0-alpha.66",
    "classnames": "^2.2.6",
    "core-js": "^3.6.5",
    "mobx": "^4.15.7",
    "npm-run-all": "^4.1.5",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "redoc": "^2.0.0-rc.45",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "cspell": "^5.0.1-alpha.8",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-checkout": "run-if-changed",
      "post-commit": "run-if-changed",
      "post-merge": "run-if-changed",
      "post-rewrite": "run-if-changed",
      "pre-commit": "npm run husky:pre-commit"
    }
  },
  "lint-staged": {
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js}": [
      "eslint --fix"
    ]
  },
  "name": "otomi-docs",
  "private": true,
  "run-if-changed": {
    "package-lock.json": "npm install --prefer-offline --no-audit"
  },
  "scripts": {
    "build": "docusaurus build",
    "cz": "git-cz",
    "cz:retry": "git-cz --retry",
    "deploy": "docusaurus deploy",
    "husky:lint-staged": "lint-staged",
    "husky:pre-commit": "lint-staged && npm run spellcheck",
    "lint": "eslint --ext js,ts .",
    "lint:fix": "eslint --ext js,ts --fix .",
    "release": "docusaurus docs:version",
    "start": "docusaurus start",
    "swizzle": "docusaurus swizzle",
    "lint:all": "run-p spellcheck lint",
    "spellcheck": "cspell \"**/*\" \".**/**\""
  },
  "version": "0.0.0"
}
